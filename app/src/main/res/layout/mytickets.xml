<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@mipmap/chat"
            android:id="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_height="210dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Easy to Chat"
            android:textColor="#000"
            android:textSize="25dp"
            android:id="@+id/txt_title"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/txt_title"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:text="Maecenas scelerisque dapibus quam. Nunc et risus at lacus lobortis laoreet sed et liqula. Etiam sodales, risus in sagittis egestas, ante velite elementum velit."
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>
